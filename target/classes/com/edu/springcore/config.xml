<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd"
 xmlns:p="http://www.springframework.org/schema/p">
 
 
 <!-- This is our bean Metadata -->
 
   <bean class="com.edu.springcore.Student"  name="stu">
                                                               <!--<Property>Using Property for set data</Property -->
      <property name="id"><value>22344</value></property>       
      <property name="name"><value>Kaleem Ashraf</value></property>
      <property name="address"><value> 38A Nanda Farm Faizullaganj, Lucknow</value></property>
 
   </bean>
    
   <bean class="com.edu.springcore.Student" name="stu1">
   
          <property name="id" value="22345"/>
          <property name="name" value="Amman Siddique"/>
          <property name="address" value=" trevini Nagar III, Lucknow"/>
          
   </bean> 
   
            <!--bean Using p:schema-->  
             
   <bean class="com.edu.springcore.Student" name="stu2" p:id="22346" p:name="Sifat Zehra" p:address="Ambedkar nagar,Uttar Pradesh"/>
 
 </beans>